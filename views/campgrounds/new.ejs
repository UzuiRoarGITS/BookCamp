<% layout('layouts/boilerplate')%>

<link rel="stylesheet" href="/stylesheets/newCamp.css" />
<!-- passes all below stuffs as a body into boilerplate.ejs file seperately-->

<div class="row">
  <h1 class="text-center text-white-50">New Campsite</h1>
  <!-- offset-3 is a class that is used to create an empty space to the left of a column, effectively shifting the column to the right. -->
  <div class="col-md-6 offset-md-3">
    <!-- enctype="multipart/form-data" is used when we store some media in a form -->
    <!-- cloudinary is used to store data such as image , video etc in thier server -->
    <!-- the url generated by cloudinary for that media is stored in mongodb -->
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label text-white-50" for="title">Title</label>
        <!-- form control -->
        <!-- It sets the width of form controls to 100% by default, making them fill the width of their container.
                It provides a consistent border, padding, and margin for form controls.
                It provides a variety of helper classes for sizing, disabling, and read-only form controls. -->
        <input
          class="form-control bg-transparent text-white-50"
          type="text"
          id="title"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label text-white-50" for="location">Location</label>
        <input
          class="form-control bg-transparent text-white-50"
          type="text"
          id="location"
          name="campground[location]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label text-white-50" for="price"
          >Compound Price</label
        >
        <!-- it is copied from input group in docs of bootstrap -->
        <div class="input-group text-white-50">
          <span
            class="input-group-text bg-transparent text-white-50"
            id="price-label"
            >â‚¹</span
          >
          <input
            type="text"
            class="form-control bg-transparent text-white-50"
            id="price"
            placeholder="0.0"
            aria-label="price"
            aria-describedby="price-label"
            name="campground[price]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label text-white-50" for="description"
          >Description</label
        >
        <textarea
          class="form-control bg-transparent text-white-50"
          type="text"
          id="description"
          name="campground[description]"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label text-white-50 bg-transparent"
          >Upload image(s)</label
        >
        <input
          class="form-control bg-transparent text-white-50"
          type="file"
          id="image"
          name="image"
          multiple
        />
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Add Campsite</button>
      </div>
    </form>
  </div>
</div>
