<%layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/edit.css" />
<!-- passes all below stuffs as a body in boilerplate.ejs file seperately -->
<div class="row">
  <h1 class="text-center text-white-50">Edit Campsite</h1>
  <!-- offset-3 is a class that is used to create an empty space to the left of a column, effectively shifting the column to the right. -->
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds/<%=campground.id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label text-white-50" for="title">Title</label>
        <!-- form control -->
        <!-- It sets the width of form controls to 100% by default, making them fill the width of their container.
                    It provides a consistent border, padding, and margin for form controls.
                    It provides a variety of helper classes for sizing, disabling, and read-only form controls. -->
        <input
          class="form-control text-white-50 bg-transparent"
          type="text"
          id="title"
          name="campground[title]"
          value="<%=campground.title%>"
          required
        />
        <div class="valid-feedback">Looks good</div>
      </div>

      <div class="mb-3">
        <label class="form-label text-white-50" for="location">Location</label>
        <input
          class="form-control text-white-50 bg-transparent"
          type="text"
          id="location"
          name="campground[location]"
          value="<%=campground.location%>"
          required
        />
        <div class="valid-feedback">Looks good</div>
      </div>

      <div class="mb-3">
        <label class="form-label text-white-50" for="price"
          >Compound Price</label
        >
        <!-- it is copied from input group in docs of bootstrap -->
        <div class="input-group">
          <span
            class="input-group-text text-white-50 bg-transparent"
            id="price-label"
            >â‚¹</span
          >
          <input
            type="text"
            class="form-control text-white-50 bg-transparent"
            id="price"
            placeholder="0.0"
            aria-label="Username"
            aria-describedby="price-label"
            name="campground[price]"
            value="<%=campground.price%>"
            required
          />
          <div class="valid-feedback">Looks good</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label text-white-50" for="description"
          >Description</label
        >
        <textarea
          class="form-control text-white-50 bg-transparent"
          type="text"
          id="description"
          name="campground[description]"
        >
<%= campground.description%></textarea
        >
        <div class="valid-feedback">Looks good</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label text-white-50">Add image(s)</label>
        <input
          class="form-control text-white-50 bg-transparent"
          type="file"
          id="image"
          name="image"
          multiple
        />
      </div>

      <div class="mb-3">
        <% campground.images.forEach(function(img, i) { %>
        <img
          src="<%= img.thumbnail %>"
          class="img-thumbnail text-white-50"
          alt=""
        />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%= i %>"
            name="deleteImages[]"
            value="<%=img.filename%>"
          />
        </div>
        <label class="text-white-50" for="image-<%= i %>">Delete</label>
        <% }) %>
      </div>

      <div class="mb-3">
        <button class="btn btn-info">Update Campsite</button>
      </div>
    </form>
  </div>
</div>
