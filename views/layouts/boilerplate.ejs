<!-- we use this file as a boilerplate for all ejs file -->
<!-- as ejs-mate allows a functionality layout('path') method for this-->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookCamp - Book campsites for your exciting journey!</title>
    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Teachers:ital,wght@0,400..800;1,400..800&display=swap"
      rel="stylesheet"
    />
    <!-- CSS using cdn-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      crossorigin="anonymous"
      src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js"
    ></script>
    <!-- script for map view(Mapbox GL JS ) -->
    <script
      crossorigin="anonymous"
      src="https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.js"
    ></script>
    <link
      crossorigin="anonymous"
      href="https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/stylesheets/app.css" />
    <style>
      * {
        font-family: "Teachers", sans-serif;
      }
    </style>
  </head>
  <!-- makes the body as flexible box -->
  <!-- flex container should arrange its children in a column direction -->
  <!-- vh-100 sets the 100 view height units-->
  <body class="d-flex flex-column vh-100">
    <!-- used to include another ejs file here in same order -->
    <%- include('../partials/navbar')%> <%- include('../partials/flash') %>
    <main class="container mt-5">
      <!-- all the sub ejs file are called as a body here -->
      <%- body %>
    </main>
    <!-- footer -->
    <%- include('../partials/footer')%>

    <!-- including js -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>

    <script src="/javascripts/validateForms.js"></script>
  </body>
</html>
